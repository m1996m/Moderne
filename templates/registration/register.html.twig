{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container">
        <div class="col-md-10"> <h1 style="text-align:center;">Inscription</h1></div>
        <div class="col-md-offset-1 col-md-10 col-md-offset-1">
            <div class="card">
                {{ form_start(registrationForm) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(registrationForm.nom, { label: 'Votre nom'}) }}
                            {{ form_row(registrationForm.prenom, { label: 'Votre prenom'}) }}
                            {{ form_row(registrationForm.tel, { label: 'Votre numero de telephone'}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe'}) }}
                            {{ form_row(registrationForm.confirmation, { label: 'confirmation'}) }}
                        </div>
                    </div>
                     <button type="submit" class="btn btn-primary">Enregistrer</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
