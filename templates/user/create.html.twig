{% extends 'base.html.twig'%}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Creation user{% endblock %}

{% block body %}

   <div class="container">
        <div class="row">
            <div class=" col-md-6">
                 {{form_start(form)}}
                    {{form_row(form.email)}}
                    {{form_row(form.password)}}
                    <div class="col-md-12 " style="text-align:right">
                        <button class="btn btn-primary">{{button_label|default('Modifier') }}</button><br>
                    </div>
                {{form_end(form)}}
            </div>
        </div>
   </div>

{% endblock %}