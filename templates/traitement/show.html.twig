{% extends 'base.html.twig' %}

{% block title %}Traitement{% endblock %}

{% block body %}
<h3 style="text-align:center">A propos de {{traitement.patient.nom }}  </h3>
<div class="container">
    <div class="row">
        <div class="col-md-10" style="position:center">
        <div class="card">
            <div class="row">
                <div class="col-md-4" style="webkit-border-radius : 75px;border: none;margin:5%; padding:5%">
                    {% if traitement.patient.image  %}
                        <img src="{{traitement.patient.image }}" alt="Une image" max-width : 75px high="10%" width="60" >
                    {% else %}
                        <img src="avatar.jpg" alt="" max-width : 75px high="10%" width="60" >
                    {% endif %}
                </div>
                <div class="col-md-5" style="webkit-border-radius : 75px;border: none;margin:5%; padding:5%">
                    <h4>Nom: {{traitement.patient.nom }} <div style="text-transform: uppercase;">Prenom: {{traitement.patient.prenom }}</div></h4>
                </div>
            </div>
            <div class=" row">
                <div class="col-md-6" style="text-align:left; padding-left:5%">
                    <h4>Debut: {{traitement.debut | date('d-m-Y ')}}</h4>
                </div>
                <div class="col-md-6" style="text-align:right; padding-right:5%">
                    <h4>Fin: {{traitement.fin | date('d-m-Y ')}}</h4>
                </div  class="row">
                <br> <br>
                <div class="col-md-3">
                        <div ><a class="btn btn-danger" href="{{path('delete_traitement', {id: traitement.id})}}">Supppimer</a></div>
                </div>
                <div class="col-md-3">
                    <div ><a class="btn btn-primary" href="{{path('edit_traitement', {id: traitement.id})}}">Editer</a></div>
                </div>
                <div class="col-md-3">
                    <div><a class="btn btn-primary" href="{{path('facture', {id: traitement.id})}}">Facture</a></div>
                </div>
                <div class="col-md-3">
                    <div ><a class="btn btn-primary" href="{{path('ordonnance', {id: traitement.id})}}">Ordonnance</a></div>
                </div>
                <br><br>
                <div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>
{% endblock %}