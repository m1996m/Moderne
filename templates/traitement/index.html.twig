{% extends 'base.html.twig' %}

{% block title %}Traitement{% endblock %}

{% block body %}
 <h1 style="text-align:center">Listes de mes patients</h1>
    <div class="container">
        <h2 style="text-align:rigtht"><a href="{{path('new_traitement')}}">Ajout</a></h2>
        <div class="row">
            {% for traitement in traitements %}        
                <div class="col-md-4">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-3" style="webkit-border-radius : 75px;border: none;margin:5%; padding:5%">
                                <img src="{{traitement.patient.image }}" alt="" max-width : 75px high="10%" width="60" >
                            </div>
                            <div class="col-md-6" style="webkit-border-radius : 75px;border: none;margin:5%; padding:5%">
                                <h4>{{traitement.patient.nom }}<div style="text-transform: uppercase;">{{traitement.patient.prenom }}</div></h4>
                            </div>
                        </div>
                        <div style="text-align:rigtht"><a href="{{path('facture', {id: traitement.id})}}">Detail</a></div>
                    </div>
                </div>
                <br><br>
            {% endfor %}
        </div>
    </div>

{% endblock %}
